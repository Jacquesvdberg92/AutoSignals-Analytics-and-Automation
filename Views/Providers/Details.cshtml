                                        <th>Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var signal in ViewBag.Signals)
                                    {
                                        <tr>
                                            <td>@signal.Provider</td>
                                            <td>@signal.Time</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                } *@

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card overflow-hidden main-content-card">
            <div class="card-body p-4">
                <div class="row justify-content-between">    
                    @if (isVipOrAdmin)
                    {
                        <div class="row p-3">
                            <div class="col-xxl-12">
                                <h4 class="mb-3">Signals</h4>
                                <div class="table-responsive">
                                    <table id="datatable-basic" class="table table-striped" data-order='[[6,"desc"]]'>
                                        <thead>
                                            <tr>
                                                <th>Symbol</th>
                                                <th>Side</th>
                                                <th>Leverage</th>
                                                <th>Entry</th>
                                                <th>Stoploss</th>
                                                <th>Take Profits</th>
                                                <th>Time</th>
                                                <th>Details</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var signal in ViewBag.Signals)
                                            {
                                                <tr>
                                                    <td>@signal.Symbol</td>
                                                    <td>@signal.Side</td>
                                                    <td>@signal.Leverage</td>
                                                    <td>@signal.Entry</td>
                                                    <td>@signal.Stoploss</td>
                                                    <td>@signal.TakeProfits</td>
                                                    <!-- Use data-order with numeric ticks for reliable sorting -->
                                                    <td data-order="@signal.Time.Ticks">@signal.Time.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                    <td>
                                                        <a asp-controller="Signals" asp-action="Details" asp-route-id="@signal.Id" asp-route-providerId="@ViewBag.ProviderId" class="btn btn-sm btn-outline-primary">
                                                            Details
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End:: row-1 -->
@section scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.6/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

    <!-- Internal Datatables JS -->
    <script src="@Url.Content("~/assets/js/datatables.js")"></script>

    <!-- Apex Charts JS -->
    <script src="@Url.Content("~/assets/libs/apexcharts/apexcharts.min.js")"></script>

    <!-- ECharts JS -->
    <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>

    <script>
        $(document).ready(function () {
            var chartAverageWinRate = new ApexCharts(document.querySelector("#average-winrate-chart"), createWinRateChartOptions(@ViewBag.AverageWinRate, 'Average', '#b6b6b6'));
            chartAverageWinRate.render();

            var chartShortWinRate = new ApexCharts(document.querySelector("#short-winrate-chart"), createWinRateChartOptions(@ViewBag.ShortWinRate, 'Short', '#FF4560'));
            chartShortWinRate.render();

            var chartLongWinRate = new ApexCharts(document.querySelector("#long-winrate-chart"), createWinRateChartOptions(@ViewBag.LongWinRate, 'Long', '#00E396'));
            chartLongWinRate.render();

            var gaugeValue = @ViewBag.Risk; // Set your initial value for the provider
            var gaugeChart = initializeGaugeChart('provider-gauge-chart', gaugeValue);

            var seriesData = [];
        @if (ViewBag.TakeProfitDistribution != null)
        {
            for (int i = 0; i < ViewBag.TpCount; i++)
            {
                <text>
                                        seriesData.push({
                                            name: 'Take Profit @(i + 1)',
                                            data: [@ViewBag.TakeProfitDistribution[i]]
                                        });
                </text>
            }
        }
        else
        {
            <text>
                            seriesData.push({
                                name: 'No Data',
                                data: [0]
                            });
            </text>
        }
            initializeStackedBarChart("#tp-breakdown-chart", seriesData);
        });
    </script>
    <script src="@Url.Content("~/assets/dashboards-js/signal-providers-dashboard.js")"></script>
}



