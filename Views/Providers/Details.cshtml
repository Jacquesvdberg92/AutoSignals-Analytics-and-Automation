<!-- Start:: row-1 -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card overflow-hidden main-content-card">
            <div class="card-body p-4">
                <div class="row justify-content-between">
                    <h4 class="mb-3 card-title">@ViewBag.Name</h4>
                    <div class="col-xxl-7 col-xl-5 col-lg-5 col-md-5 col-sm-5 overflow-auto">
                        <table class="table text-nowrap table-sm">
                            <tbody>
                                <tr>
                                    <td>Risk-to-Reward Ratio (RRR):</td>
                                    <td>@ViewBag.RRR</td>
                                </tr>
                                <tr>
                                    <td>Average Profit per Trade:</td>
                                    <td>@ViewBag.AverageProfitPerTrade %</td>
                                </tr>
                                <tr>
                                    <td>Average Loss per Trade:</td>
                                    <td>@ViewBag.StoplossPersentage %</td>
                                </tr>
                                <tr>
                                    <td>Signals Provided:</td>
                                    <td>@ViewBag.SignalCount</td>
                                </tr>
                                <tr>
                                    <td>Average Leverage:</td>
                                    <td>@ViewBag.AverageLeverage x</td>
                                </tr>
                                <tr>
                                    <td>Take-Profit:</td>
                                    <td>@ViewBag.TakeProfitTargets</td>
                                </tr>
                                <tr>
                                    <td>Signals Not Triggered (NULL):</td>
                                    <td>@ViewBag.SignalsNullified</td>
                                </tr>
                                <tr>
                                    <td>Trading Style:</td>
                                    <td>@ViewBag.TradeStyle</td>
                                </tr>
                                <tr>
                                    <td>Trades Per day:</td>
                                    <td>@ViewBag.TradesPerDay</td>
                                </tr>
                                <tr>
                                    <td>Trade Timeframes:</td>
                                    <td>@ViewBag.TradeTimeframes</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-5 col-sm-5 p-1">
                        <div id="provider-gauge-chart" style="width:100%;max-width:400px;height:250px;min-height:180px;margin:auto;"></div>

                    </div>
                </div>

                <div class="row p-1">
                    <p class="text-muted d-block mb-1 text-nowrap text-center">Win Rates: </p>
                    <div class="col-xxl-12 d-flex justify-content-center align-items-center">
                        <div class="d-flex justify-content-center align-items-center" style="width: 33%;">
                            <div id="average-winrate-chart"></div>
                        </div>
                        <div class="d-flex justify-content-center align-items-center" style="width: 33%;">
                            <div id="short-winrate-chart"></div>
                        </div>
                        <div class="d-flex justify-content-center align-items-center" style="width: 33%;">
                            <div id="long-winrate-chart"></div>
                        </div>
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-xxl-12">
                        <p class="text-muted d-block mb-1 text-nowrap text-center">Shorts and Longs Distribution:</p>
                        <div class="progress-stacked progress-xl mb-5">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: @ViewBag.ShortRatio%; background-color: #dc3545;" aria-valuenow="@ViewBag.ShortRatio%" aria-valuemin="0" aria-valuemax="100" title="Shorts">
                                @ViewBag.ShortCount
                            </div>
                            <div class="progress-bar bg-success" role="progressbar" style="width: @ViewBag.LongRatio%; background-color: #28a745;" aria-valuenow="@ViewBag.LongRatio%" aria-valuemin="0" aria-valuemax="100" title="Longs">
                                @ViewBag.LongCount
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col-xxl-12">
                        <div id="tp-breakdown-chart"></div>
                    </div>
                </div>

                @* @if (isVipOrAdmin)
                {
                    <div class="row p-3">
