@model AutoSignals.ViewModels.EmailBroadcastViewModel
@{
    ViewData["Title"] = "Email Broadcast";
}
<div class="row">
  <div class="col-xxl-12">
    <div class="card custom-card">
      <div class="card-header justify-content-between">
        <div class="card-title">Send Email</div>
      </div>
      <div class="card-body">
        @if (TempData["Status"] != null) {
          <div class="alert alert-success">@TempData["Status"]</div>
        }
        <form asp-action="Send" method="post">
          <div class="mb-3">
            <label asp-for="Subject" class="form-label"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
          </div>
          <div class="mb-3">
            <label asp-for="HtmlBody" class="form-label"></label>
            <textarea asp-for="HtmlBody" rows="10" class="form-control email-body-editor" id="HtmlBody"></textarea>
            <span asp-validation-for="HtmlBody" class="text-danger"></span>
          </div>
          <div class="form-check form-switch mb-3">
            <input class="form-check-input" asp-for="IsTest" />
            <label class="form-check-label" asp-for="IsTest"></label>
          </div>
          <div class="form-check form-switch mb-3">
            <input class="form-check-input" asp-for="SendToAll" />
            <label class="form-check-label" asp-for="SendToAll"></label>
          </div>
          <div class="mb-3" id="recipient-picker">
            <label class="form-label">Select recipients (confirmed users)</label>
            <div class="table-responsive">
              <table class="table table-bordered w-100">
                <thead><tr><th></th><th>User</th><th>Email</th></tr></thead>
                <tbody>
                @foreach (var r in Model.Recipients) {
                  <tr>
                    <td><input type="checkbox" name="SelectedRecipientIds" value="@r.Id" /></td>
                    <td>@r.UserName</td>
                    <td>@r.Email</td>
                  </tr>
                }
                </tbody>
              </table>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.js"></script>

    <style>
      /* Fallback if Summernote isn't initialized */
      #HtmlBody.email-body-editor { background-color: #ffffff; color: #212529; }

      /* Fix extra spacing between lines for this editor only */
      #HtmlBody.email-body-editor + .note-editor .note-editable {
        line-height: 1; /* adjust as desired */
      }
      #HtmlBody.email-body-editor + .note-editor .note-editable p {
        margin: 0 0 .5rem; /* reduce paragraph bottom margin (Bootstrap default is 1rem) */
      }
      #HtmlBody.email-body-editor + .note-editor .note-editable p:last-child {
        margin-bottom: 0;
      }
    </style>

    <script>
        $('#HtmlBody').summernote({
          placeholder: 'Type your email body...',
          height: 280,
          toolbar: [
            ['style', ['bold', 'italic', 'underline', 'clear']],
            ['fontsize', ['fontsize']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['height', ['height']], // allow users to change line-height
            ['insert', ['link']],
            ['view', ['undo', 'redo', 'codeview']]
          ],
          lineHeights: ['1', '1.15', '1.3', '1.4', '1.5', '1.75', '2'],
          callbacks: {
            onInit: function () {
              // Keep this editor white and readable
              $(this).next('.note-editor').find('.note-editable').css({
                'background-color': '#ffffff',
                'color': '#212529'
              });
            }
          }
        });
    </script>
}
