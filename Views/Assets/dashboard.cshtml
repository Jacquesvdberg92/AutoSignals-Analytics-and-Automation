@{
    ViewBag.Title = "Assets Dashboard";
}

@section styles {

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/libs/swiper/swiper-bundle.min.css")">

    <!-- Data Table CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap5.min.css">

}

<!-- Start::page-header -->
<div class="d-flex align-items-center justify-content-between page-header-breadcrumb flex-wrap gap-2">
    <div>
        <nav>
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item">
                    <a href="javascript:void(0);">
                        Dashboards
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Assets & Tokens</li>
            </ol>
        </nav>
        <h1 class="page-title fw-medium fs-18 mb-0">Assets & Tokens</h1>
    </div>
</div>
<!-- End::page-header -->
<!-- Start::row-1 -->


<!-- Start:: row-2 -->
<div class="row">
    <div class="col-xxl-12">
        <div class="card custom-card">
            <div class="card-header justify-content-between">
                <div class="card-title flex-fill">
                    Crypto Assets
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="datatable-basic" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Symbol</th>
                                <th>Price</th>
                                <th>Binance</th>
                                <th>Bitget</th>
                                <th>Bybit</th>
                                <th>OKX</th>
                                @* <th>KuCoin</th> *@
                                <th>Time (UTC)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var asset in ViewBag.CombinedAssets)
                            {
                                var prices = new List<decimal?> { asset.BinancePrice, asset.BitgetPrice, asset.BybitPrice, asset.OkxPrice };//, asset.KuCoinPrice
                                var maxPrice = prices.Where(p => p.HasValue).Max();
                                var minPrice = prices.Where(p => p.HasValue).Min();

                                string GetColor(decimal? price)
                                {
                                    if (price == maxPrice) return "color:#008000;";
                                    if (price == minPrice) return "color:#FF0000;";
                                    return "color:#FFA500;";
                                }

                                <tr>
                                    <td>@asset.Symbol</td>
                                    <td>@asset.GeneralPrice</td>
                                    <td style="@GetColor(asset.BinancePrice)">@asset.BinancePrice</td>
                                    <td style="@GetColor(asset.BitgetPrice)">@asset.BitgetPrice</td>
                                    <td style="@GetColor(asset.BybitPrice)">@asset.BybitPrice</td>
                                    <td style="@GetColor(asset.OkxPrice)">@asset.OkxPrice</td>
                                    @* <td style="@GetColor(asset.KuCoinPrice)">@asset.KuCoinPrice</td> *@
                                    <td>@asset.GeneralTime</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>
<!-- End:: row-2 -->

