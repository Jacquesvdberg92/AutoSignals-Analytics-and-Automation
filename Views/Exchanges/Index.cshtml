@model IEnumerable<AutoSignals.Models.Exchange>

@{
    ViewData["Title"] = "Exchanges";
    var isAdmin = User.IsInRole("Admin");
}

@section styles {
    <link rel="stylesheet" href="@Url.Content("~/assets/libs/swiper/swiper-bundle.min.css")">
}

<!-- Start::page-header -->
<div class="d-flex align-items-center justify-content-between page-header-breadcrumb flex-wrap gap-2">
    <div>
        <nav>
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item">
                    <a href="javascript:void(0);">Admin</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Exchanges</li>
            </ol>
        </nav>
        <h1 class="page-title fw-medium fs-18 mb-0">Exchanges</h1>
    </div>
    @if (isAdmin)
    {
        <div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    }
</div>
<!-- End::page-header -->

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-xxl-3 col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="card custom-card h-100 d-flex flex-column">
                <img src="@(string.IsNullOrWhiteSpace(item.LogoUrl) ? Url.Content("~/assets/images/media/ExchangeImage.jpeg") : item.LogoUrl)"
                     class="card-img-top exchange-logo-img"
                     alt="@item.Name Logo"
                     onerror="this.onerror=null;this.src='@Url.Content("~/assets/images/media/ExchangeImage.jpeg")';" />
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title fw-medium mb-1">@item.Name</h6>
                    <span class="badge mb-2 @(item.Type == "DEX" ? "dex-badge" : item.Type == "CEX" ? "cex-badge" : "bg-secondary")">
                        @item.Type
                    </span>
                    <p class="card-text text-muted mb-2">@item.Description</p>
                    @if (!string.IsNullOrEmpty(item.ReferralBonus))
                    {
                        <div class="alert alert-info py-1 px-2 small mb-2">
                            <strong>Bonus:</strong> @item.ReferralBonus
                        </div>
                    }
                    <div class="mb-2">
                        <a href="@Url.Action("Referral", "Exchanges", new { id = item.Id })"
                           class="btn btn-outline-primary btn-sm"
                           target="_blank">
                            Sign-up
                        </a>
                        @if (isAdmin)
                        {
                            <span class="text-muted small">Referral Clicked: @item.ReferalClicked</span>
                        }
                    </div>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center exchange-card-footer">
                    <div>
                        <span class="me-2">Automation Available:</span>
                        <span class="badge @(item.IsEnabled ? "bg-success" : "bg-danger")">
                            @(item.IsEnabled ? "Yes" : "No")
                        </span>
                    </div>
                    <div class="ms-auto">
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-1">Delete</a>
                        }
                        @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a> *@
                    </div>
                </div>
            </div>
        </div>
    }
</div>