@model AutoSignals.ViewModels.VipDashboardViewModel

<!-- Start::page-header -->
<div class="d-flex align-items-center justify-content-between page-header-breadcrumb flex-wrap gap-2">
    <div>
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item">
                <a href="javascript:void(0);">
                    Dashboards
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">VIP</li>
        </ol>
        <h1 class="page-title fw-medium fs-18 mb-0">
            VIP Dashboard
            @if (User.IsInRole("Admin"))
            {
                <span class="text-muted">for User: @Model.UserName</span>
            }
        </h1>
    </div>
    <div class="d-flex align-items-center gap-2 flex-wrap">
        <div class="form-group">
            <label for="timeframe" class="form-label">Select Timeframe:</label>
            <select id="timeframe" class="form-select" onchange="updateDateRange(this.value)">
                <option value="7">Last 7 Days</option>
                <option value="30">Last 30 Days</option>
                <option value="90">Last 90 Days</option>
            </select>
        </div>
        <div>
            <h1 class="page-title fw-medium fs-18 mb-0">Data from @Model.StartDate.ToString("yyyy-MM-dd") to @Model.EndDate.ToString("yyyy-MM-dd")</h1>
        </div>
    </div>
</div>
<!-- End::page-header -->
<!-- Start::Stats -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card overflow-hidden main-content-card">
            <div class="card-body p-4">
                <h4>VIP Dashboard Overview</h4>
                <div class="row">
                    <div class="col-xl-3">
                        <h5>ROI</h5>
                        <ul class="list-unstyled">
                            <li><strong>Total ROI:</strong> @Model.TotalROI %</li>
                            <li><strong>Average ROI:</strong> @Model.AverageROI %</li>
                        </ul>
                        <h5>PnL</h5>
                        <ul class="list-unstyled">
                            <li><strong>Net PnL:</strong> $ @Model.NetPNL</li>
                            <li><strong>Total Profit:</strong> $ @Model.TotalProfit</li>
                            <li><strong>Total Loss:</strong> $ @Model.TotalLoss </li>
                        </ul>
                        <h5>Notational & Volume</h5>
                        <ul class="list-unstyled">
                            <li><strong>Total Volume:</strong> $ @Model.TotalTradeVolume</li>
                            <li><strong>Average Notational:</strong> $ @Model.AverageTradeSize</li>
                            <li><strong>Largest Notatonal:</strong> $ @Model.LargestTradeSize</li>
                            <li><strong>Smallest Notational:</strong> $ @Model.SmallestTradeSize </li>
                        </ul>
                    </div>
                    <div class="col-xl-9">
                        <div class="card custom-card overflow-hidden main-content-card">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div id="roiChart"></div>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


