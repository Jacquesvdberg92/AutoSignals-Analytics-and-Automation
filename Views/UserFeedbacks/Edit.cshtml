@model AutoSignals.Models.UserFeedback

@{
    ViewData["Title"] = "Edit";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var statusList = new List<SelectListItem>
    {
        new SelectListItem { Text = "New", Value = "New" },
        new SelectListItem { Text = "In Progress", Value = "In Progress" },
        new SelectListItem { Text = "Resolved", Value = "Resolved" },
        new SelectListItem { Text = "Closed", Value = "Closed" }
    };
}

<!-- Start::page-header -->
<div class="d-flex align-items-center justify-content-between page-header-breadcrumb flex-wrap gap-2">
    <div>
        <nav>
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item">
                    <a href="javascript:void(0);">
                        Support
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Feedback</li>
            </ol>
        </nav>
        <h1 class="page-title fw-medium fs-18 mb-0">Edit Feedback</h1>
    </div>
</div>
<!-- End::page-header -->

<div class="row justify-content-center">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card custom-card overflow-hidden h-100">
            <div class="card-body">
                <h1 class="page-title fw-medium fs-18 mb-3 text-center">Edit Feedback</h1>
                <form id="editFeedbackForm" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="SubmittedAt" />

                    @* Subject: Only editable by admin *@
                    @if (isAdmin)
                    {
                        <div class="form-group mb-3">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="Subject" />
                    }

                    @* Message: Editable by everyone *@
                    <div class="form-group mb-3">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    @* Status: Only editable by admin *@
                    @if (isAdmin)
                    {
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control" asp-items="statusList"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="Status" />
                    }

                    @* Add More Screenshots: Only admin can add more *@
                    @if (isAdmin)
                    {
                        <div class="form-group mb-3">
                            <label class="control-label">Add More Screenshots (max 25MB total, multiple allowed)</label>
                            <input type="file" name="ScreenshotFiles" id="screenshotFiles" multiple class="form-control" accept="image/*" />
                            @if (ViewData.ModelState["ScreenshotFiles"] != null)
                            {
                                <span class="text-danger">@ViewData.ModelState["ScreenshotFiles"].Errors.FirstOrDefault()?.ErrorMessage</span>
                            }
                            <div id="imagePreview" class="mt-2 d-flex flex-wrap gap-2"></div>
                        </div>
                    }

                    @* Display existing images *@
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <div class="mb-3">
                            <label class="control-label">Existing Screenshots</label>
                            <div class="d-flex flex-wrap gap-2 align-items-center">
                                @foreach (var img in Model.Images)
                                {
                                    <div class="position-relative me-2">
                                        <img src="@Url.Action("GetImage", "UserFeedbacks", new { imageId = img.Id })"
                                             class="img-thumbnail"
                                             style="max-width:100px;max-height:100px;" />
                                        @if (isAdmin)
                                        {
                                            <a href="@Url.Action("DeleteImage", "UserFeedbacks", new { feedbackId = Model.Id, imageId = img.Id })"
                                               class="btn btn-danger btn-sm position-absolute top-0 end-0"
                                               title="Delete Image"
                                               onclick="return confirm('Are you sure you want to delete this image?');">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    @* Only enable image preview for admin *@
    @if (isAdmin)
    {
        <script>
            // Image preview and size validation (max 25MB total)
            document.getElementById('screenshotFiles').addEventListener('change', function (event) {
                const preview = document.getElementById('imagePreview');
                preview.innerHTML = '';
                const files = event.target.files;
                let totalSize = 0;
                if (files) {
                    Array.from(files).forEach(file => {
                        totalSize += file.size;
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            reader.onload = function (e) {
                                const img = document.createElement('img');
                                img.src = e.target.result;
                                img.className = 'img-thumbnail';
                                img.style.maxWidth = '100px';
                                img.style.maxHeight = '100px';
                                img.alt = file.name;
                                preview.appendChild(img);
                            };
                            reader.readAsDataURL(file);
                        }
                    });
                }
                // 25MB = 26214400 bytes
                if (totalSize > 26214400) {
                    alert('Total image size must not exceed 25MB.');
                    event.target.value = '';
                    preview.innerHTML = '';
                }
            });
        </script>
    }
}
